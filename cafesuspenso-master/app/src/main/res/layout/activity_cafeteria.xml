<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context="com.cafesuspenso.ufcg.cafesuspenso.Activity.CafeteriaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:id="@+id/namePlace"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:text="Nome do Local"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:id="@+id/descriptionPlace"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="Descriçao breve do local que oferece..."/>

        <ImageView
            android:id="@+id/imagePlace"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="200dp"
            android:layout_marginTop="55dp"
            android:src="@color/colorPrimaryLight" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Quantidade de itens disponíveis:"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/countCoffee"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="40dp"
            android:text="17"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_height="50dp">

        <Button
            android:id="@+id/share_btn"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Compartilhar"
            android:textColor="@color/white" />

        <Button
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimaryDark"
            android:id="@+id/redeem_btn"
            android:text="Resgatar"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</RelativeLayout>
